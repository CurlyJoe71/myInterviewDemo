    <script>
        var myInterviewRecorder = new myInterviewWidget({
            container: '#myinterview', // querySelector to the element that will contain the widget
            config : {
                apiKey: "ic67gY2dMUrVkW7Bg2tp",
                customBtn: "<a href='#video-interview' id='open-popup-myinterview' data-cssmodal-nohash class='custombtn'>Begin</a>",
                user: {
                    username: username,
                    email: email
                },
                introVideo: "https://youtu.be/soGXpEboQGs",
                introVideoTitle: "Here's how this interview works.",
                practice: true,
                practiceParts: [
                    {
                        question: "Introduce yourself",
                        partDuration: 15,
                        description: "Example: Hello, my name is [Your Name].",
                        explanation: "This is your chance to get out those butterflies. You're a natural...",
                        points: ["Dress professionally.", "Look directly into the camera.", "Speak clearly and steadily.", "Smile!"],
                        conclusion: "Please click stop when you are finished practicing.",
                        numOfRetakes: 5
                    }
                ],
                completeCallback: callback,
                hasGdpr: true,
                firstScreenTitle: "Prescreen Interview for AALL Insurance",
                firstScreenSubOne: "Do not be nervous. Relax. Show us your true self.",
                firstScreenSubTwo: "Make sure you are in a quiet spot without distractions.",
                parts: [
                    {
                        question: 'In Spanish, please tell us when you started to speak Spanish in a professional setting',
                        partDuration: 45,
                        description: "This job requires you to be bilingual in order serve our Spanish-speaking customers.",
                        numOfRetakes: -1,
                        conclusion: "Please click stop when you are finished."
                    },
                    {
                        question: "In English, please tell us how you feel about customer service and helping others.",
                        partDuration: 60,
                        description: "This job is very focused on making our customers feel valued!",
                        points: ["Are you skills aligned with our desire to make everyone feel important?"],
                        numOfRetakes: -1,
                        conclusion: "Please click stop when you are finished."
                    },
                    {
                        question: "What excites you or makes you interested in working at AALL Insurance?",
                        partDuration: 60,
                        description: "We love people who are passionate about customer service.",
                        points: ["What made you want to apply for this position?"],
                        numOfRetakes: -1,
                        conclusion: "Please click stop when you are finished."
                    },
                    {
                        question: "In whichever language you prefer, tell us why you would be a good fit.",
                        partDuration: 60,
                        description: "Use what you know about us and what caught your interest in working here.",
                        points: ["Sell yourself!"],
                        numOfRetakes: -1,
                        conclusion: "Please click stop when you are finished."
                    },
                    {
                        question: "In Spanish, share with us 3 or 4 characteristics you've learned in previous positions that will help you succeed at AALL Insurance?",
                        partDuration: 75,
                        points: ["Be sure to use real examples from your life."],
                        numOfRetakes: -1,
                        conclusion: "Please click stop when you are finished."
                    },
                    {
                        question: "Please outline the type of work schedule you are looking for. Also, if you are hired, when can you start?",
